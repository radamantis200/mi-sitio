---
import BaseLayout from "@/layouts/BaseLayout.astro";
import CookiesComponent from "@/components/Cookies.astro";

const siteUrl = import.meta.env.SITE_URL;

const seo = {
    title: "Política de Cookies – Jefry Sánchez",
    description:
        "Este sitio utiliza cookies para mejorar tu experiencia, analizar el tráfico y personalizar el contenido. Podés conocer más y configurar tus preferencias en cualquier momento.",
    canonical: `${siteUrl + "cookies"}`,
};
---

<BaseLayout
    title={seo.title}
    ,
    description={seo.description}
    ,
    canonical={seo.canonical}
>
    <CookiesComponent />
</BaseLayout>
